<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddPhotoFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id = "@+id/photoParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/photoUpload0"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/uploadWindow"
                    android:layout_width="@dimen/imageWindowWidth"
                    android:layout_height="@dimen/imageWindowHeight"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#aea6a6"
                    app:srcCompat="@drawable/add_photo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="@dimen/addBtnWidth"
                    android:layout_height="wrap_content"
                    android:text="Add More" />

                <Button
                    android:id="@+id/removeBtn"
                    android:layout_width="@dimen/addBtnWidth"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Remove" />
            </LinearLayout>

            <Button
                android:id="@+id/next1"
                android:layout_width="@dimen/addBtnWidth"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:text="Next" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>